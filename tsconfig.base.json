{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@heat-sensor/api/cqrs": ["libs/api/cqrs/src/index.ts"],
      "@heat-sensor/api/models": ["libs/api/models/src/index.ts"],
      "@heat-sensor/cqrs": ["libs/cqrs/src/index.ts"],
      "@heat-sensor/database-services": ["libs/database-services/src/index.ts"],
      "@heat-sensor/database-services/cqrs": [
        "libs/database-services/cqrs/src/index.ts"
      ],
      "@heat-sensor/frontend": ["libs/frontend/src/index.ts"],
      "@heat-sensor/frontend/services": ["libs/services/src/index.ts"],
      "@heat-sensor/graphql": ["libs/graphql/src/index.ts"],
      "@heat-sensor/graphql/cqrs": ["libs/graphql/cqrs/src/index.ts"],
      "@heat-sensor/models": ["libs/models/src/index.ts"],
      "@heat-sensor/new-services": ["libs/services/src/index.ts"],
      "@heat-sensor/services": ["libs/services/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
